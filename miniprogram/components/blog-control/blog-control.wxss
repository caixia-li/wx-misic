.ctrl {
  display: flex;
  align-items: center;
  background-color: #fff;
  padding: 0rpx 0rpx 20rpx 0rpx;
}

.ctrl-item {
  flex: 1;
  text-align: center;
  color: rgba(0, 7, 0, 0.7);
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  height: 100%;
}

.ctrl-item .icon {
  margin-right: 12rpx;
  font-size: 40rpx;
}

.ctrl-item text {
  font-size: 36rpx;
  margin-top: -14rpx;
}

.send {
  position: absolute;
  right: 20rpx;
  bottom: 10rpx;
  background-color: #1296db;
  padding: -1rpx 5rpx;
  font-size: 28rpx;
  color: #fff;
  margin-top: 20rpx;
}

.comment-content {
  margin-top: 20rpx;
  height: 150rpx;
  width: 650rpx;
  text-align: left;
  padding-left: 10rpx;
}

.share-btn{
  background-color: transparent;
  border: none;
}

.share-btn::after{
  border: none;
}
