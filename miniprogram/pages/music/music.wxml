<swiper indicator-dots="true" autoplay="true" interval="2000">
  <block wx:for="{{swiperImgs}}" wx:for-index="index" wx:for-item="item" wx:key="index">
    <swiper-item>
      <image src="{{item.fileid}}" mode="widthFix"></image>
    </swiper-item>
  </block>
</swiper>
<!-- 展示音乐列表 -->
<view class="music-list">
<block wx:for="{{musicList}}" wx:for-index="index" wx:for-item="item" wx:key="index">
<playList playlist="{{item}}"></playList>
</block>
</view>